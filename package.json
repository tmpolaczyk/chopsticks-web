{
  "name": "chopsticks-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "tsc && bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "lint": "tsc --noEmit --project tsconfig.lint.json && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --check .",
    "fix": "eslint . --ext .ts,.tsx --fix && prettier -w .",
    "prepare": "husky install",
    "postinstall": "bunx patch-package"
  },
  "dependencies": {
    "@acala-network/chopsticks-core": "^0.9.5",
    "@acala-network/chopsticks-db": "^0.9.5",
    "@polkadot/api": "^10.11.2",
    "@rehooks/local-storage": "^2.4.5",
    "antd": "^5.12.5",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "resolutions": {
    "@acala-network/chopsticks-core@^0.9.5": "patch:@acala-network/chopsticks-core@npm%3A0.9.5#./.yarn/patches/@acala-network-chopsticks-core-npm-0.9.5-48faffeb77.patch",
    "@acala-network/chopsticks-core@0.9.5": "patch:@acala-network/chopsticks-core@npm%3A0.9.5#./.yarn/patches/@acala-network-chopsticks-core-npm-0.9.5-48faffeb77.patch"
  }
}
